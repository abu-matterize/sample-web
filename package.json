{
  "name": "hugo-site",
  "version": "1.0.0",
  "description": "Professional Hugo site with Tailwind CSS",
  "scripts": {
    "dev": "hugo server",
    "build": "hugo",
    "build:tailwind": "tailwindcss -i ./themes/main/assets/css/main.css -o ./themes/main/assets/css/style.css",
    "watch:tailwind": "tailwindcss -i ./themes/main/assets/css/main.css -o ./themes/main/assets/css/style.css --watch"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.23",
    "tailwindcss": "^3.3.2"
  }
}
